---
import "../../styles/global.css";
---

<html lang="es">
  <head>
    <meta charset="utf-8" />
    <title>Admin Dashboard | El Vecino</title>
  </head>

  <body class="bg-gradient-to-br from-gray-200 via-gray-400 to-gray-600 min-h-screen">
    <!-- Header fijo -->
    <header class="fixed top-0 left-0 w-full z-50 flex justify-between items-center px-8 py-4 bg-black/40 backdrop-blur-md border-b border-white/30 shadow-md">
      <div class="flex items-center space-x-3">
        <!-- LOGO -->
        <div class="w-12 h-12 bg-black flex items-center justify-center text-white font-bold rounded">
          EL<br />VECINO
        </div>
      </div>

      <!-- Botones -->
      <nav class="flex space-x-4">
        <a
          href="#"
          class="px-5 py-2 bg-black/80 text-white rounded-lg hover:bg-black transition"
        >
          Compra a proveedores
        </a>
        <a
          href="/admin/operadores"
          class="px-5 py-2 bg-black/80 text-white rounded-lg hover:bg-black transition"
        >
          Manejar Operadores
        </a>
        <a
          href="/login"
          class="px-5 py-2 bg-red-600 text-white rounded-lg hover:bg-red-700 transition"
        >
          Cerrar Sesión
        </a>
      </nav>
    </header>

    <!-- Contenido principal -->
    <main class="pt-28 p-8 flex flex-col gap-10 items-center">
      <!-- Título -->
      <h1 class="text-5xl font-extrabold text-white drop-shadow-lg mb-4">
        Admin Dashboard
      </h1>

      <!-- Proveedores recientes -->
      <section class="w-full max-w-5xl p-8 bg-white/30 backdrop-blur-md border border-white/40 rounded-2xl shadow-xl">
        <h2 class="text-2xl font-bold text-black mb-1">
          Proveedores Recientes
        </h2>
        <p class="text-gray-700 mb-6">Actuales</p>

        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
          <div class="bg-white/80 rounded-xl p-4 flex flex-col items-center text-center shadow-md">
            <img
              src="/proveedor1.jpg"
              alt="Proveedor 1"
              class="w-24 h-24 object-cover rounded-full mb-3"
            />
            <h3 class="font-semibold text-lg">Distribuidora Central</h3>
            <p class="text-gray-600 text-sm">
              Proveedor especializado en alimentos frescos.
            </p>
          </div>

          <div class="bg-white/80 rounded-xl p-4 flex flex-col items-center text-center shadow-md">
            <img
              src="/proveedor2.jpg"
              alt="Proveedor 2"
              class="w-24 h-24 object-cover rounded-full mb-3"
            />
            <h3 class="font-semibold text-lg">Abarrotes del Sur</h3>
            <p class="text-gray-600 text-sm">
              Suministros de abarrotes y productos secos.
            </p>
          </div>

          <div class="bg-white/80 rounded-xl p-4 flex flex-col items-center text-center shadow-md">
            <img
              src="/proveedor3.jpg"
              alt="Proveedor 3"
              class="w-24 h-24 object-cover rounded-full mb-3"
            />
            <h3 class="font-semibold text-lg">Frutas y Verduras VerdeSol</h3>
            <p class="text-gray-600 text-sm">
              Distribuidor local de frutas y verduras orgánicas.
            </p>
          </div>
        </div>
      </section>

      <!-- Operadores -->
      <section class="w-full max-w-5xl p-8 bg-white/30 backdrop-blur-md border border-white/40 rounded-2xl shadow-xl">
        <h2 class="text-2xl font-bold text-black mb-6">Operadores</h2>

        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
          <div class="bg-white/80 rounded-xl p-4 flex flex-col items-center text-center shadow-md">
            <img
              src="/operador1.jpg"
              alt="Operador 1"
              class="w-24 h-24 object-cover rounded-full mb-3"
            />
            <h3 class="font-semibold text-lg">María Rojas</h3>
            <p class="text-gray-700 text-sm">Rol: Vendedora</p>
            <p class="text-gray-500 text-xs">RUT: 12.345.678-9</p>
          </div>

          <div class="bg-white/80 rounded-xl p-4 flex flex-col items-center text-center shadow-md">
            <img
              src="/operador2.jpg"
              alt="Operador 2"
              class="w-24 h-24 object-cover rounded-full mb-3"
            />
            <h3 class="font-semibold text-lg">Carlos Pérez</h3>
            <p class="text-gray-700 text-sm">Rol: Supervisor</p>
            <p class="text-gray-500 text-xs">RUT: 18.234.567-0</p>
          </div>

          <div class="bg-white/80 rounded-xl p-4 flex flex-col items-center text-center shadow-md">
            <img
              src="/operador3.jpg"
              alt="Operador 3"
              class="w-24 h-24 object-cover rounded-full mb-3"
            />
            <h3 class="font-semibold text-lg">Lucía Torres</h3>
            <p class="text-gray-700 text-sm">Rol: Cajera</p>
            <p class="text-gray-500 text-xs">RUT: 15.987.654-3</p>
          </div>
        </div>
      </section>
    </main>
  </body>
</html>
