---
import AdminLayout from "../../layouts/AdminLayout.astro";
import { ReportsForm } from "../../components/reports-form";
import { ReportsResults } from "../../components/reports-results";
---

<AdminLayout title="Reportes | El Vecino">
  <main class="min-h-[60vh] py-8">
    <div class="max-w-7xl mx-auto space-y-8">
      <div class="text-center">
        <h1 class="text-4xl md:text-5xl font-bold mb-8">Reportes</h1>
        <p class="text-white/80">Filtra y visualiza reportes de ventas e inventario</p>
      </div>

      <div class="flex justify-center">
        <ReportsForm client:load />
      </div>

      <ReportsResults client:load />
    </div>
  </main>
</AdminLayout>
