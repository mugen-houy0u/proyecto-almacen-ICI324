---
import AdminLayout from '@/layouts/AdminLayout.astro';

// Se define la misma estructura para que TypeScript entienda los datos
interface Operador {
  id_empleado: number;
  nombre: string;
  rut_empleado: string;
  telefono: string;
  correo: string;
  direccion: string;
  fecha_de_ingreso: string;
  rol: string;
  usuario: string;
  contrasena: string;
}

// 1. Se obtiene el ID de la URL
const { id } = Astro.params;

// 2. Se buscan los datos del operador específico en el backend
const res = await fetch(`http://127.0.0.1:8000/empleados/${id}`);
const operador = await res.json() as Operador;
---

<AdminLayout title={`Detalles de ${operador.nombre}`}>
  <section class="w-full max-w-3xl mx-auto p-8">
    <div class="flex justify-between items-center mb-6">
      <h2 class="text-3xl font-bold text-white">Detalles del Operador</h2>
      <a
        href="/admin/operadores"
        class="px-5 py-2 bg-gray-700 text-white font-semibold rounded-lg hover:bg-gray-800 transition shadow-md"
      >
        &larr; Volver a la Lista
      </a>
    </div>

    <div class="bg-white/80 rounded-xl p-8 shadow-lg">
      <div class="flex flex-col md:flex-row items-center md:items-start gap-8">
        <img src="/default-user.png" alt={operador.nombre} class="w-32 h-32 object-cover rounded-full border-4 border-white shadow-md" />
        <div class="w-full">
          <h3 class="text-3xl font-bold text-gray-900 text-center md:text-left">{operador.nombre}</h3>
          <p class="text-lg text-gray-600 text-center md:text-left">{operador.rol}</p>
          
          <div class="mt-6 border-t border-gray-300 pt-4 grid grid-cols-1 sm:grid-cols-2 gap-x-6 gap-y-4">
            <div>
              <strong class="block text-gray-500">RUT</strong>
              <span class="text-gray-800">{operador.rut_empleado}</span>
            </div>
            <div>
              <strong class="block text-gray-500">Teléfono</strong>
              <span class="text-gray-800">{operador.telefono}</span>
            </div>
            <div>
              <strong class="block text-gray-500">Correo Electrónico</strong>
              <span class="text-gray-800">{operador.correo}</span>
            </div>
            <div>
              <strong class="block text-gray-500">Fecha de Ingreso</strong>
              <span class="text-gray-800">{new Date(operador.fecha_de_ingreso).toLocaleDateString('es-CL')}</span>
            </div>
            <div class="sm:col-span-2">
              <strong class="block text-gray-500">Dirección</strong>
              <span class="text-gray-800">{operador.direccion}</span>
            </div>
            <div class="sm:col-span-2">
              <strong class="block text-gray-500">Usuario del Sistema</strong>
              <span class="text-gray-800">{operador.usuario}</span>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</AdminLayout>