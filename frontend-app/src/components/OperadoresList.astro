---
import OperadorForm from "./forms/OperadorForm.astro";

const operadores = [
  { id: 1, nombre: "María Rojas", rut: "12.345.678-9", rol: "Vendedora", img: "/operador1.jpg" },
  { id: 2, nombre: "Carlos Pérez", rut: "18.234.567-0", rol: "Supervisor", img: "/operador2.jpg" },
  { id: 3, nombre: "Lucía Torres", rut: "15.987.654-3", rol: "Cajera", img: "/operador3.jpg" }
];

let selectedOperador = null;
---

<section class="w-full max-w-5xl mx-auto p-8 bg-white/30 backdrop-blur-md border border-white/40 rounded-2xl shadow-xl">
  <h2 class="text-3xl font-bold mb-6 text-white text-3xl">Gestión de Operadores</h2>

  <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
    {operadores.map(op => (
      <div class="bg-white/80 rounded-xl p-4 flex flex-col items-center text-center shadow-md">
        <img src={op.img} alt={op.nombre} class="w-24 h-24 object-cover rounded-full mb-3" />
        <h3 class="font-semibold text-lg">{op.nombre}</h3>
        <p class="text-gray-700 text-sm">Rol: {op.rol}</p>
        <p class="text-gray-500 text-xs">RUT: {op.rut}</p>
        <button
          type="button"
          class="mt-3 px-4 py-2 bg-black text-white rounded-lg hover:bg-gray-800 transition"
          onClick={() => (selectedOperador = op)}
        >
          Modificar
        </button>
      </div>
    ))}
  </div>

  {selectedOperador && (
    <div class="mt-10 p-6 bg-white/90 rounded-xl shadow-xl">
      <h3 class="text-xl font-bold mb-4 text-gray-800">Modificar Operador</h3>
      <OperadorForm operador={selectedOperador} />
    </div>
  )}
</section>