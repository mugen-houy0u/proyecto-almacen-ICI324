---
// 1. Se importa el nuevo componente del bot贸n que tiene la l贸gica para eliminar
import BotonEliminar from '@/components/BotonEliminar.jsx';

// El resto de tu c贸digo para obtener los datos se mantiene igual
interface Operador {
  id_empleado: number;
  nombre: string;
  rut_empleado: string;
  telefono: string;
  correo: string;
  direccion: string;
  fecha_de_ingreso: string;
  rol: string;
  usuario: string;
  contrasena: string;
}

const res = await fetch("http://127.0.0.1:8000/empleados/");
const operadores = await res.json() as Operador[];
---

<section class="w-full max-w-5xl mx-auto p-8 bg-white/30 backdrop-blur-md border border-white/40 rounded-2xl shadow-xl">
  <div class="flex justify-between items-center mb-6">
    <h2 class="text-3xl font-bold text-white">Gesti贸n de Operadores</h2>
    <a
      href="/admin/operadores/agregar"
      class="px-5 py-2 bg-green-500 text-white font-semibold rounded-lg hover:bg-green-600 transition shadow-md"
    >
      Agregar Operador
    </a>
  </div>

  <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
    {operadores.map(op => (
      <div class="bg-white/80 rounded-xl p-4 flex flex-col items-center text-center shadow-md">
        <img src="/default-user.png" alt={op.nombre} class="w-24 h-24 object-cover rounded-full mb-3 border-2 border-white" />
        <h3 class="font-semibold text-lg text-gray-900">{op.nombre}</h3>
        <p class="text-gray-700 text-sm">Rol: {op.rol}</p>
        <p class="text-gray-500 text-xs">RUT: {op.rut_empleado}</p>

        <div class="flex flex-wrap justify-center items-center gap-2 mt-4">
          <a
            href={`/admin/operadores/${op.id_empleado}/editar`}
            class="px-4 py-2 bg-black text-white rounded-lg hover:bg-gray-800 transition text-sm font-medium"
          >
            Modificar
          </a>
          
          <a
            href={`/admin/operadores/${op.id_empleado}/detalles`}
            class="px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition text-sm font-medium"
          >
            Ver detalles
          </a>

          {/*  ESTE ES EL REEMPLAZO  */}
          {/* Se quita el <button> est谩tico y se pone el componente interactivo */}
          <BotonEliminar client:load operadorId={op.id_empleado} />

        </div>
      </div>
    ))}
  </div>
</section>
