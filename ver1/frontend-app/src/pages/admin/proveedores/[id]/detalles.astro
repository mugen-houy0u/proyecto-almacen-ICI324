---
import AdminLayout from '@/layouts/AdminLayout.astro';

// Se define la estructura del objeto Proveedor para TypeScript
interface Proveedor {
  id_proveedor: number;
  id_empleado: number;
  nombre_empresa: string;
  correo: string;
  telefono: string;
  direccion: string;
}

// 1. Se obtiene el ID de la URL
const { id } = Astro.params;

// 2. Se buscan los datos del proveedor específico en el backend
const res = await fetch(`http://127.0.0.1:8000/proveedores/${id}`);
const proveedor = await res.json() as Proveedor;
---

<AdminLayout title={`Detalles de ${proveedor.nombre_empresa}`}>
  <section class="w-full max-w-3xl mx-auto p-8">
    <div class="flex justify-between items-center mb-6">
      <h2 class="text-3xl font-bold text-white">Detalles del Proveedor</h2>
      <a
        href="/admin/proveedores"
        class="px-5 py-2 bg-gray-700 text-white font-semibold rounded-lg hover:bg-gray-800 transition shadow-md"
      >
        &larr; Volver a la Lista
      </a>
    </div>

    <!-- Tarjeta con toda la información del proveedor -->
    <div class="bg-white/80 rounded-xl p-8 shadow-lg">
      <div class="flex flex-col md:flex-row items-center md:items-start gap-8">
        <img src="/default-provider.png" alt={proveedor.nombre_empresa} class="w-32 h-32 object-cover rounded-full border-4 border-white shadow-md" />
        <div class="w-full">
          <h3 class="text-3xl font-bold text-gray-900 text-center md:text-left">{proveedor.nombre_empresa}</h3>
          
          <div class="mt-6 border-t border-gray-300 pt-4 grid grid-cols-1 sm:grid-cols-2 gap-x-6 gap-y-4">
            <div>
              <strong class="block text-gray-500">ID Proveedor</strong>
              <span class="text-gray-800">{proveedor.id_proveedor}</span>
            </div>
             <div>
              <strong class="block text-gray-500">ID Empleado que registró</strong>
              <span class="text-gray-800">{proveedor.id_empleado}</span>
            </div>
            <div>
              <strong class="block text-gray-500">Teléfono</strong>
              <span class="text-gray-800">{proveedor.telefono}</span>
            </div>
            <div>
              <strong class="block text-gray-500">Correo Electrónico</strong>
              <span class="text-gray-800">{proveedor.correo}</span>
            </div>
            <div class="sm:col-span-2">
              <strong class="block text-gray-500">Dirección</strong>
              <span class="text-gray-800">{proveedor.direccion}</span>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</AdminLayout>
