---
/**
 * Página: Gestión de Empleados
 * Carga todos los empleados desde el backend FastAPI.
 */
const res = await fetch("http://127.0.0.1:8000/api/empleados");
const empleados = await res.json();
---

<section class="w-full max-w-5xl mx-auto p-8 bg-white/30 backdrop-blur-md border border-white/40 rounded-2xl shadow-xl">
  <h2 class="text-3xl font-bold mb-6 text-white">Gestión de Empleados</h2>

  <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
    {empleados.map(emp => (
      <div class="bg-white/80 rounded-xl p-4 flex flex-col items-center text-center shadow-md">
        <img
          src="/default-user.png"
          alt={emp.nombre}
          class="w-24 h-24 object-cover rounded-full mb-3 border border-gray-300"
        />
        <h3 class="font-semibold text-lg">{emp.nombre}</h3>
        <p class="text-gray-700 text-sm">Rol: {emp.rol}</p>
        <p class="text-gray-500 text-xs">RUT: {emp.rut}</p>

        <a
          href={`/admin/empleados/${emp.id}/editar`}
          class="mt-3 px-4 py-2 bg-black text-white rounded-lg hover:bg-gray-800 transition"
        >
          Modificar
        </a>
      </div>
    ))}
  </div>
</section>
